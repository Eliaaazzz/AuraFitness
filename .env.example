# ==========================================
# BACKEND CONFIGURATION
# ==========================================

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/fitness_mvp
SPRING_DATASOURCE_USERNAME=fitnessuser
SPRING_DATASOURCE_PASSWORD=dev_password

# Redis Configuration
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=

# API Keys (Required)
YOUTUBE_API_KEY=your_youtube_api_key_here
SPOONACULAR_API_KEY=your_spoonacular_api_key_here

# OpenAI API Key (OPTIONAL - only needed for AI features)
# AI features: pose analysis, recipe generation, nutrition insights
# App works perfectly without this - leave empty to disable AI features
# OPENAI_ENABLED=true
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (OPTIONAL)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
APP_SEED_ENABLED=true
SERVER_PORT=8080

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================

# API Base URL
API_BASE_URL=http://localhost:8080

# ==========================================
# DEPLOYMENT (Production)
# ==========================================

# EC2 Deployment
EC2_HOST=your_ec2_ip
EC2_USER=ubuntu
EC2_SSH_KEY=path_to_ssh_key

# AWS (Optional)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_bucket_name
